// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Iniciar Vite",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "vite v\\d+\\.\\d+\\.\\d+ dev server running",
          "endsPattern": "ready in \\d+ms"
        }
      }
    }
  ]
}